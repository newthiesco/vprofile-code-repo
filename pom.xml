version: 0.2

env:
  parameter-store:
    SONAR_TOKEN: "VPROFILE_SONARTOKEN"
    CODEARTIFACT_TOKEN: "CODEARTIFACT_TOKEN"
    HOST: "HOST"
    ORGANIZATION: "ORGANIZATION"
    SONAR_PROJECT: "SONAR_PROJECT"
    CODEARTIFACT_DOMAIN: "domain"
    CODEARTIFACT_OWNER: "domain-owner"

phases:
  install:
    runtime-versions:
      java: corretto17
    commands:
      - echo "Installing Java 17..."
      - java -version
      - export JAVA_HOME=/usr/lib/jvm/java-17-amazon-corretto
      - export PATH=$PATH:$JAVA_HOME/bin
      
  pre_build:
    commands:
      - echo "Preparing environment..."
      - aws --version
      - mvn --version
      
  build:
    commands:
      - echo "Running build and tests..."
      - mvn clean package -Dmaven.compiler.source=17 -Dmaven.compiler.target=17
      - echo "Running SonarCloud analysis..."
      - |
        mvn verify sonar:sonar \
          -Dsonar.projectKey=${SONAR_PROJECT} \
          -Dsonar.organization=${ORGANIZATION} \
          -Dsonar.host.url=${HOST} \
          -Dsonar.login=${SONAR_TOKEN} \
          -Dmaven.compiler.source=17 \
          -Dmaven.compiler.target=17
      
artifacts:
  files:
    - target/*.war
    - appspec.yml
    - scripts/**/*
  discard-paths: no

cache:
  paths:
    - '/root/.m2/**/*'
